doctype 5

html
  head
    title My Awesome Web Application
    link(rel="stylesheet", type="text/css", href="/css/lib/bootstrap.css")
    link(rel="stylesheet", type="text/css", href="/css/magic-textarea.css")
    link(rel="stylesheet", type="text/css", href="/css/dropdown-list.css")
    link(rel="stylesheet", type="text/css", href="/css/style.css")

  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.brand Material Docente
          ul.nav
            li
              a ayuda

    .container.main-container
      .row
        .span12
          h1.page-header Búsqueda 
            small Ingresa códigos, facultades, palabras clave...

        .span12
          .input-prepend.input-append
            span.add-on
              i.icon-search
            input.span10(type="text")
            button.btn-search.btn.btn-primary Buscar

      .row
        .span12.results-container

    script#suggest-item-tmpl(type='text/template')
      li ${type} ${long_name}

    script#results-table-tmpl(type="text/template")
      table.table
        thead
          tr
            th #
            th
            th Nombre
            th Descargar
            th
        tbody
          {{each(i, row) rows}}
          tr
            td ${i+1}
            td ${row.codigo}
            td
              a(href="${row.uri}") ${row.name}
            td
              {{if row.link}}
              a(href="${row.link}") U-Cursos
              {{/if}}
            td
              {{if row.directLink}}
              a(href="${row.directLink}") Descarga Directa
              {{/if}}
          {{/each}}


    script(type="text/javascript",
      src="http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.3.1/underscore-min.js")
    script(type="text/javascript",
      src="http://cdnjs.cloudflare.com/ajax/libs/backbone.js/0.9.2/backbone-min.js")
    script(type="text/javascript",
      src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js")
    script(type="text/javascript", src="js/lib/vendor/require.js")
    script(type="text/javascript", src="js/toast.js")

    script(type="text/javascript", src="js/lib/jquery-fieldselection.pack.js")
    script(type="text/javascript", src="js/jquery.extensions.js")
    script(type="text/javascript", src="js/lib/vendor/jquery.tmpl.min.js")
    script(type="text/javascript", src="js/lib/oop.js")
    script(type="text/javascript", src="js/lib/notifier.js")
    script(type="text/javascript", src="js/lib/dropdown-list.js")
    script(type="text/javascript", src="js/lib/magic-textarea.js")
    script(type="text/javascript", src="js/lib/rdf.js")
    script(type="text/javascript", src="js/main.js")
